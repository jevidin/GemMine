<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsActivity"
    android:background="@drawable/cave1">

    <ImageView
        android:id="@+id/img_size"
        android:layout_width="619dp"
        android:layout_height="348dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/wooden_bg"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sign1" />

    <RadioGroup
        android:id="@+id/radio_group_game_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/txt_board_size"
        app:layout_constraintTop_toBottomOf="@+id/txt_board_size"
        />

    <TextView
        android:id="@+id/txt_board_size"
        android:layout_width="155dp"
        android:layout_height="29dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:fontFamily="casual"
        android:text="@string/game_board_size"
        android:textColor="#BD4104"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/img_size"
        app:layout_constraintTop_toTopOf="@+id/img_size" />

    <TextView
        android:id="@+id/txt_gems"
        android:layout_width="155dp"
        android:layout_height="29dp"
        android:layout_marginStart="180dp"
        android:fontFamily="casual"
        android:text="@string/num_of_gems"
        android:textColor="#BD4104"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/txt_board_size"
        app:layout_constraintTop_toTopOf="@+id/txt_board_size" />

    <RadioGroup
        android:id="@+id/radio_group_gems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/txt_gems"
        app:layout_constraintTop_toBottomOf="@+id/txt_gems" />




</androidx.constraintlayout.widget.ConstraintLayout>