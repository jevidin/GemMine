<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsActivity"
    android:background="@drawable/cave1">



    <RadioGroup
        android:id="@+id/radio_group_game_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/txt_board_size"
        app:layout_constraintTop_toBottomOf="@+id/txt_board_size"
        />

    <TextView
        android:id="@+id/txt_board_size"
        android:layout_width="155dp"
        android:layout_height="29dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/sign1"
        android:fontFamily="casual"
        android:text=" Game Board Size:"
        android:textColor="#BD4104"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_gems"
        android:layout_width="155dp"
        android:layout_height="29dp"
        android:layout_marginStart="250dp"
        android:background="@drawable/sign1"
        android:fontFamily="casual"
        android:text=" Number of gems:"
        android:textColor="#BD4104"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/txt_board_size"
        app:layout_constraintTop_toTopOf="@+id/txt_board_size" />

    <RadioGroup
        android:id="@+id/radio_group_gems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/txt_gems"
        app:layout_constraintTop_toBottomOf="@+id/txt_gems" />



</androidx.constraintlayout.widget.ConstraintLayout>