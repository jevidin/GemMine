<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="@drawable/cave2">

    <ImageView
        android:id="@+id/imgFound"
        android:layout_width="177dp"
        android:layout_height="37dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/table_for_buttons"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sign1"
        android:contentDescription="Background for txtFound" />

    <ImageView
        android:id="@+id/imgScanned"
        android:layout_width="177dp"
        android:layout_height="37dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:contentDescription="Background for txtScanned"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sign1" />

    <TableLayout
        android:id="@+id/table_for_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtScanned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="@string/txtScanned"
        android:textAlignment="center"
        android:textColor="#BD4104"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgScanned"
        app:layout_constraintEnd_toEndOf="@+id/imgScanned"
        app:layout_constraintStart_toStartOf="@+id/imgScanned"
        app:layout_constraintTop_toTopOf="@+id/imgScanned" />

    <TextView
        android:id="@+id/txtFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="@string/txtFound"
        android:textAlignment="center"
        android:textColor="#BD4104"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgFound"
        app:layout_constraintEnd_toEndOf="@+id/imgFound"
        app:layout_constraintStart_toStartOf="@+id/imgFound"
        app:layout_constraintTop_toTopOf="@+id/imgFound" />


</androidx.constraintlayout.widget.ConstraintLayout>